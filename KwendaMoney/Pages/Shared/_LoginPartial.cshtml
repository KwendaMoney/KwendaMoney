@using Microsoft.AspNetCore.Identity
@using KwendaMoney.Models
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var usuario = await UserManager.GetUserAsync(User);
    var primeiroNome = usuario?.Nome?.Split(' ')[0];

           <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gerenciar conta">
                Olá, @primeiroNome!
            </a>
        </li>
        <li class="nav-item">
            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Sair</button>
            </form>
        </li>
    </ul>

}
else
{
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
            </li>
        </ul>
}
