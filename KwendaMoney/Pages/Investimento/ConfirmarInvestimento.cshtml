@page
@model KwendaMoney.Pages.Investimento.ConfirmarInvestimentoModel
@{
    ViewData["Title"] = "Confirmar Investimento";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">
                    <i class="bi bi-check2-circle me-2"></i>Confirmar Investimento
                </h2>
            </div>

            @if (TempData["Mensagem"] != null)
            {
                    <div class="alert alert-warning text-center animate__animated animate__fadeIn">
                    @TempData["Mensagem"]
                    </div>
            }

            @if (Model.Pacote != null)
            {
                    <div class="card shadow-sm rounded-4 p-4 mb-4 animate__animated animate__fadeIn">
                        <h4 class="text-secondary fw-semibold mb-3">
                            <i class="bi bi-box me-2 text-dark"></i>Pacote: <span class="text-dark">@Model.Pacote.Nome</span>
                        </h4>

                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-cash me-2 text-success"></i><strong>Valor:</strong></span>
                                <span>AOA @Model.Pacote.Valor.ToString("N2").Replace(".", "#").Replace(",", ".").Replace("#", ",")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-graph-up me-2 text-info"></i><strong>Lucro Diário:</strong></span>
                                <span>AOA @Model.Pacote.LucroDiario.ToString("N2").Replace(".", "#").Replace(",", ".").Replace("#", ",")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-clock me-2 text-warning"></i><strong>Duração:</strong></span>
                                <span>@Model.Pacote.DiasMaximos dias</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-wallet2 me-2 text-primary"></i><strong>Seu saldo atual:</strong></span>
                                <span>AOA @Model.SaldoCarteiraGeral.ToString("N2").Replace(".", "#").Replace(",", ".").Replace("#", ",")</span>
                            </li>
                        </ul>

                        <form method="post" class="text-center">
                            <input type="hidden" asp-for="PacoteId" />
                            <button type="submit" class="btn btn-success btn-lg w-100 mt-3 animate__animated animate__fadeIn">
                                <i class="bi bi-check-circle me-2"></i>Confirmar Investimento
                            </button>
                        </form>
                    </div>
            }
        </div>
    </div>
</div>
